<h1>Listing meals</h1>

<table>
  <tr>
    <th>User</th>
    <th>Meal type</th>
    <th>Rating</th>
    <th>Comments</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @meals.each do |meal| %>
  <tr>
    <td><%= meal.user %></td>
    <td><%= meal.meal_type.name %></td>
    <td><%= meal.rating %></td>
    <td><%= meal.comments %></td>
    <td><%= link_to 'Show', meal %></td>
    <td><%= link_to 'Edit', edit_meal_path(meal) %></td>
    <td><%= link_to 'Destroy', meal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

